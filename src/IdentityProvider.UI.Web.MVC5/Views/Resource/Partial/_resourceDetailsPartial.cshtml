<div class="container-fluid">
    <div class="row clearfix">
        <div class="header cool-text">
            <em style="font-size: 1.7em">
                Operations
            </em>
            <em style="font-size: 0.9em">
                <small>Edit</small>
            </em>
        </div>
        <div class="body" style="width:100% !important">
            <table class="table-light">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td valign="top">
                            <b>@Html.DisplayNameFor(item => item.Resource.Name)</b>
                        </td>
                        <td>
                            @Html.DisplayFor(item => item.Resource.Name)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(item => item.Resource.Description)</b>
                        </td>
                        <td>
                            @Html.DisplayFor(item => item.Resource.Description)

                        </td>
                    </tr>
                    <tr>
                        <td style="word-wrap: break-word !important;">
                            <b>@Html.DisplayNameFor(item => item.Resource.Active)</b>
                        </td>
                        <td>
                            @if (Model.Resource.Active)
                            {
                                <i class="material-icons align-center" style="cursor: not-allowed; color: green" title="Active">check_circle_outline</i>
                            }
                            else
                            {
                                <i class="material-icons align-center" style="cursor: not-allowed; color: darkred" title="Inactive">domain_disabled</i>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td style="word-wrap: break-word !important;">
                            <b>@Html.DisplayNameFor(item => item.Resource.ActiveFrom)</b>
                        </td>
                        <td>
                            @if (Model.Resource.ActiveFrom != DateTime.MinValue)
                            {
                                @Html.DisplayFor(item => item.Resource.ActiveFrom)

                            }
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b>@Html.DisplayNameFor(item => item.Resource.ActiveTo)</b>
                        </td>
                        <td>
                            @if (Model.Resource.ActiveTo != DateTime.MinValue)
                            {
                                @Html.DisplayFor(item => item.Resource.ActiveTo)

                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
