<style>

    span { font-family: "Montserrat", sans-serif; }

    .jump { animation: jump 1.5s infinite ease; }

    @@-webkit-keyframes jump {
        0% { top: 0; }

        50% { top: -40px; }

        100% { top: 0; }
    }

    .coin {
        bottom: 0;
        height: 150px;
        left: 0;
        margin: auto;
        position: absolute;
        right: 0;
        top: 0;
        width: 150px;
    }

    .coin .front, .coin .back {
        background: #ffbd0b;
        border-bottom: 7px solid #d57e08;
        border-left: 7px solid #ffd84c;
        border-radius: 50%;
        border-right: 7px solid #d57e08;
        border-top: 7px solid #ffd84c;
        height: 150px;
        position: absolute;
        transform: rotate(44deg);
        width: 150px;
    }

    .coin .front:before, .coin .back:before {
        background: #f0a608;
        border-bottom: 5px solid #ffd84c;
        border-left: 5px solid #d57e08;
        border-radius: 50%;
        border-right: 5px solid #ffd84c;
        border-top: 5px solid #d57e08;
        content: "";
        height: 70px;
        margin: 35.5px 35.5px;
        position: absolute;
        width: 70px;
        z-index: 2;
    }

    .coin .front .currency, .coin .back .currency {
        border-radius: 50%;
        color: #ffbd0b;
        font-size: 40px;
        height: 100%;
        line-height: 3.7;
        overflow: hidden;
        position: absolute;
        text-align: center;
        text-shadow: 0 3px 0 #cb7407;
        transform: rotate(-44deg);
        width: 100%;
        z-index: 3;
    }

    .coin .front .currency:after, .coin .back .currency:after {
        animation: shine 1.5s infinite ease;
        box-shadow: 50px -23px 0 -10px rgba(255, 255, 255, 0.22), 85px -10px 0 -16px rgba(255, 255, 255, 0.19);
        content: "";
        height: 200px;
        margin: 20px -65px;
        position: absolute;
        transform: rotate(-50deg);
        width: 40px;
    }

    @@keyframes shine {
        0% { margin: 20px -65px; }

        50% { margin: 70px -85px; }

        100% { margin: 20px -65px; }
    }

    .coin .front .shapes, .coin .back .shapes {
        height: 100%;
        left: 0;
        position: absolute;
        top: 0;
        transform: rotate(-44deg);
        width: 100%;
    }

    .coin .front .shapes div, .coin .back .shapes div {
        background: #d57e08;
        border-top: 2px solid #c47207;
        height: 4px;
        margin: 75px 7px;
        width: 20px;
    }

    .coin .front .shapes div:before, .coin .back .shapes div:before {
        background: #d57e08;
        border-top: 2px solid #c47207;
        content: "";
        height: 4px;
        margin: -10px 0;
        position: absolute;
        width: 20px;
    }

    .coin .front .shapes div:after, .coin .back .shapes div:after {
        background: #d57e08;
        border-top: 2px solid #c47207;
        content: "";
        height: 4px;
        margin: 8px 0;
        position: absolute;
        width: 20px;
    }

    .coin .front .shape_l, .coin .back .shape_l { float: left; }

    .coin .front .shape_r, .coin .back .shape_r { float: right; }

    .coin .front .top, .coin .back .top {
        color: #d67f08;
        font-size: 30px;
        left: 0;
        position: absolute;
        text-align: center;
        width: 100%;
    }

    .coin .front .bottom, .coin .back .bottom {
        bottom: 0;
        color: #d67f08;
        font-size: 30px;
        left: 0;
        position: absolute;
        text-align: center;
        width: 100%;
    }

    .coin .shadow {
        animation: swift 1.5s infinite ease;
        background: rgba(0, 0, 0, 0.4);
        border-radius: 50%;
        bottom: -50px;
        height: 20px;
        left: 0;
        margin: 185px 7px 0 7px;
        width: 100%;
        z-index: -1;
    }

    @@keyframes swift {
        0% { opacity: 0.8; }

        50% {
            opacity: 0.4;
            transform: scale(0.8);
        }

        100% { opacity: 0.8; }
    }
</style>

