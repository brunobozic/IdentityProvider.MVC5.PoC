@using Module.CrossCutting.Models.ViewModels.Operations
@model OperationVm

<div class="container-fluid">
    <div class="row clearfix">
        <div class="card">
            <div class="header cool-text">
                <em style="font-size: 1.7em">Operations</em>
                <em style="font-size: 0.9em"><small>Edit</small></em>
            </div>
            <div class="body container-fluid" style="width: 100% !important">
                <div class="body" style="width:100% !important">
                    <table class="table-light table-condensed table-striped table-responsive" style="padding:4px">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @* Display Name and Value with Tag Helpers *@
                            <tr>
                                <td valign="top" style="width:25% !important">
                                    <b>@Html.DisplayNameFor(model => model.Operation.Name)</b>
                                </td>
                                <td style="width:66% !important">
                                    @Model.Operation.Name
                                </td>
                            </tr>
                            <tr>
                                <td style="width:25% !important">
                                    <b>@Html.DisplayNameFor(model => model.Operation.Description)</b>
                                </td>
                                <td style="width:66% !important">
                                    @Model.Operation.Description
                                </td>
                            </tr>
                            @* Display Active Status with Icons *@
                            <tr>
                                <td style="word-wrap: break-word !important;width:25% !important">
                                    <b>@Html.DisplayNameFor(model => model.Operation.Active)</b>
                                </td>
                                <td style="width:66% !important">
                                    @if (Model.Operation.Active)
                                    {
                                        <i class="material-icons align-center" style="cursor: not-allowed; color: green" title="Active">check_circle_outline</i>
                                    }
                                    else
                                    {
                                        <i class="material-icons align-center" style="cursor: not-allowed; color: darkred" title="Inactive">domain_disabled</i>
                                    }
                                </td>
                            </tr>
                            @* Display Dates, Checking for Default Values *@
                            <tr>
                                <td style="word-wrap: break-word !important;width:25% !important">
                                    <b>@Html.DisplayNameFor(model => model.Operation.ActiveFrom)</b>
                                </td>
                                <td style="width:66% !important">
                                    @Model.Operation.ActiveFrom.ToString()
                                </td>
                            </tr>
                            <tr>
                                <td style="width:25% !important">
                                    <b>@Html.DisplayNameFor(model => model.Operation.ActiveTo)</b>
                                </td>
                                <td style="width:66% !important">
                                    @Model.Operation.ActiveTo.ToString()
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
