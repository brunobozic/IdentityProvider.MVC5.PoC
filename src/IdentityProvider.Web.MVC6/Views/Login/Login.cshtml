<div class="login-box">
    <div class="logo">
        <a href="javascript:void(0);">Material Design<b>MD</b></a>
        <small>Material Design Proof of Concept</small>
    </div>
    <div class="card">
        <div class="body">
            <form asp-action="Login" asp-controller="Account" method="post" id="sign_in" novalidate>
                <input type="hidden" asp-for="__RequestVerificationToken" />
                <div class="msg">Sign in to start your session</div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">person</i>
                    </span>
                    <div class="form-line">
                        <input asp-for="Username" class="form-control" placeholder="Username" autofocus />
                    </div>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons">lock</i>
                    </span>
                    <div class="form-line">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8 p-t-5">
                        <input asp-for="RememberMe" type="hidden" value="false" />
                        <input asp-for="RememberMe" class="filled-in chk-col-pink" type="checkbox" />
                        <label asp-for="RememberMe">Remember Me</label>
                    </div>
                    <div class="col-xs-4">
                        <button class="btn btn-block bg-pink waves-effect" type="submit">SIGN IN</button>
                    </div>
                </div>
                <div class="row m-t-15 m-b--20">
                    <div class="col-xs-6">
                        <a asp-action="Register" style="padding: 1px">Sign up for an account.</a>
                    </div>
                    <div class="col-xs-6 align-right">
                        <a asp-action="ForgotPassword" style="padding: 1px">Forgot your password?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

